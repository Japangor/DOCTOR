<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/user_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/photo_male_6"/>

    <TextView
        android:id="@+id/user_fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/user_pic"
        android:layout_toEndOf="@+id/user_pic"
    android:layout_marginHorizontal="5dp"
        android:text="Fname"/>
    <TextView
        android:id="@+id/user_lname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/user_fname"
        android:layout_toEndOf="@+id/user_fname"
        android:text="Lname"/>

    <TextView
        android:id="@+id/user_message"
        android:layout_below="@+id/user_fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/user_pic"
        android:layout_toEndOf="@+id/user_pic"
        android:layout_marginHorizontal="5dp"
        android:text="Lname"/>


</RelativeLayout>