<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/spacing_large"
    android:paddingVertical="@dimen/spacing_xmedium">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_large">

        <TextView
            android:id="@+id/dispensary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nida Homoeopathic Dispensary"
            android:textColor="@color/grey_9"
            android:background="@color/grey_9"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <View
            android:id="@+id/getdirection"
            android:layout_width="80dp"
            android:layout_height="18dp"
            android:text="Get Direction"
            android:textColor="@color/grey_9"
            android:paddingHorizontal="@dimen/spacing_xmedium"
            android:background="@color/grey_9"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:background="@color/grey_9"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:background="@color/grey_9"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:background="@color/grey_9"/><View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:background="@color/grey_9"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:background="@color/grey_9"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:background="@color/grey_9"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:background="@color/grey_9"/>
        <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:background="@color/grey_9"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:background="@color/grey_9"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:background="@color/grey_9"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:background="@color/grey_9"/><View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:background="@color/grey_9"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey_20"
        android:layout_marginTop="@dimen/spacing_large"/>


</LinearLayout>